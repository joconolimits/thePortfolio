@model IEnumerable<ThePortfolio.ViewModels.PortfolioItemViewModel>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.ProjcetUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            Tags
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.ProjcetUrl)
        </td>
        <td>
            <img src="~/Images/PortfolioItems/@item.Image" style="width: 50px" />
        </td>
        <td>
            @foreach (var x in item.Tags)
            {
                if (x.Assigned)
                {
                    <snan>@x.Name</snan>
                    <br/>
                }

            }
          @*@Html.DisplayFor(x => item.Tags.Where(t => t.Assigned == true))*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
